doctype html
html
    head
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        div(class="container")
            h1 🐶 Pets
            a(href="/update-cobj") ➕ Add a new pet
            table(class="table table-striped table-bordered")
                thead
                    tr
                        th Name
                        th Type
                        th Action
                each pet in data
                    tr
                        td #{pet.properties.pet_name}
                        td #{pet.properties.pet_type}
                        td
                            a(href=`/update-cobj?id=${pet.properties.hs_object_id}`) Update